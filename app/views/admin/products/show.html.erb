<%= provide :title, @product.name %>
<div class="row">
  <div class="col-md-4">
    <div class="product_image">
      <p>
        <%= image_tag @product.picture_link? ? @product.picture_link.url : 
          "default-product.jpg", class: "mc-img" %>
      </p>
    </div>
  </div>
  <div class="col-md-4">
    <div class="product_info">
      <div class="produdct_name">
        <p><%= @product.name %></p>
      </div>
      <p>
        <strong><%= t "product.product_price" %></strong>:
        <%= @product.price %>
      </p>
      <p>
        <strong><%= t "product.product_classify" %></strong>:
        <%= t "classify.#{@product.classify}" %>
      </p>
      <p>
        <strong><%= t "product.product_category" %>: </strong>
        <%= @product.category.name %>
      </p>
      <p>
        <strong><%= t "product.product.product_content" %></strong>:
        <%= @product.content %>
      </p>
      <div class="product_rating">
        <%= render "ratings/show" %>
      </div>
    </div>
  </div>
  <%= link_to t("product.edit_product"), edit_admin_product_path(@product) %>
  <%= link_to t("product.delete"), admin_product_path(@product), method:
    :delete, data: {confirm: t("product.confirm")} %>
</div>
